<Window x:Class="SurApp.AzimuthWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:SurApp"
		xmlns:vm="clr-namespace:SurApp.ViewModels"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Title="坐标方位角计算"
		Width="580"
		Height="250"
		FontSize="16"
		mc:Ignorable="d">
	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="VerticalAlignment"
					Value="Center" />
			<Setter Property="TextAlignment"
					Value="Right" />
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="VerticalAlignment"
					Value="Center" />
		</Style>

	</Window.Resources>

	<Window.DataContext>
		<vm:AzimuthWindowVM />
	</Window.DataContext>

	<Grid Background="AliceBlue">
		<Grid.RowDefinitions>
			<RowDefinition Height="50*" />
			<RowDefinition Height="50*" />
			<RowDefinition Height="40*" />
			<RowDefinition Height="50*" />
		</Grid.RowDefinitions>
		<GroupBox Header="起点">
			<Grid Background="CadetBlue">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="110*" />
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="110*" />
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="110*" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="点名:" />
				<TextBox Grid.Column="1"
						 d:Text="D01"
						 Text="{Binding StartPoint.Name}" />
				<TextBlock Grid.Column="2"
						   Text="X=" />
				<TextBox Grid.Column="3"
						 d:Text="3805820.521"
						 Text="{Binding StartPoint.X}" />
				<TextBlock Grid.Column="4"
						   Text="Y=" />
                <TextBox Grid.Column="5"
						 d:Text="333150.649"
						 Text="{Binding StartPoint.Y}" />
            </Grid>
		</GroupBox>

		<GroupBox Grid.Row="1"
				  Header="方向点">
			<Grid Background="Chocolate">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="110*" />
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="110*" />
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="110*" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="点名:" />
				<TextBox Grid.Column="1"
						 d:Text="D02"
						 Text="{Binding EndPoint.Name}" />
				<TextBlock Grid.Column="2"
						   Text="X=" />
				<TextBox Grid.Column="3"
						 d:Text="3805813.062"
						 Text="{Binding EndPoint.X}" />
				<TextBlock Grid.Column="4"
						   Text="Y=" />
				<TextBox Grid.Column="5"
						 d:Text="333067.961"
						 Text="{Binding EndPoint.Y}" />
			</Grid>
		</GroupBox>

		<GroupBox Grid.Row="3"
				  Header="计算结果">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="180*" />
					<ColumnDefinition Width="110*" />
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="110*" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="{Binding AzName}" />
				<TextBox Grid.Column="1"
						 Text="{Binding Az}" />
				<TextBlock Grid.Column="2"
						   Text="距离" />
				<TextBox Grid.Column="3"
						 Text="{Binding Dist}" />

			</Grid>
		</GroupBox>
		<Grid Grid.Row="2"
			  Background="YellowGreen">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
					Margin="5"
					Command="{Binding SwitchCommand}"
					Content="起点&lt;-&gt;方向点" />
            <Button Grid.Column="2"
					Margin="5"
					Command="{Binding CalculateCommand}"
					Content="计算" />
			<Button Grid.Column="3"
					Margin="5"
					Content="关闭"
					IsCancel="True" />
		</Grid>

	</Grid>
</Window>
